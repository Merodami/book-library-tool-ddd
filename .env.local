# General / services
NODE_ENV=development
DEFAULT_TIMEZONE=Europe/Belgium
LOG_LEVEL=debug
APP_VERSION=0.0.0

# Service names
BOOK_SERVICE_NAME=book_service
RESERVATIONS_SERVICE_NAME=reservation_service
WALLETS_SERVICE_NAME=reservation_service

# Service API URLs
BOOKS_API_URL=http://localhost:3001
RESERVATIONS_API_URL=http://localhost:3002
WALLETS_API_URL=http://localhost:3003

# Service port numbers
BOOKS_SERVICE_SERVER_PORT=3001
RESERVATIONS_SERVICE_SERVER_PORT=3002
REMINDER_SERVICE_PORT=3003
GRAPHQL_SERVER_PORT=4000

# MongoDB configuration (Database)
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME_LIBRARY=library
MONGO_DB_NAME_EVENT=events

# Redis settings (Cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DEFAULT_TTL=3600
REDIS_RETRY_DELAY=50
REDIS_MAX_RETRY_DELAY=2000

# RabbitMQ settings (Message broker)
