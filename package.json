{
  "name": "book-library-tool",
  "version": "1.2.0",
  "private": true,
  "author": "Damian Meroni (@merodami)",
  "type": "module",
  "scripts": {
    "validate:all": "yarn validate:dependencies && yarn typecheck && yarn lint",
    "validate:dependencies": "nx run-many --target='knip --no-hints' --all",
    "upgrade": "nx run-many --target=upgrade --all --parallel=100",
    "upgrade:all": "nx run-many --target=upgrade --all --parallel=100",
    "graph": "nx graph",
    "docker:local": "docker compose -f docker-compose.local.yml up -d",
    "docker:local:down": "docker compose -f docker-compose.local.yml down",
    "docker:restart": "yarn docker:local:down && yarn docker:local",
    "test": "yarn vitest",
    "build": "nx run-many --target=build --all --parallel=100 --output-style=stream --skip-nx-cache",
    "typecheck": "nx run-many --target=typecheck --parallel=100",
    "lint": "nx format:check && eslint '**/*.{js,tsx,jsx,ts}' && prettier --check .",
    "lint:fix": "prettier --write . && eslint '**/*.{js,tsx,jsx,ts}' --fix",
    "lint:report": "eslint --quiet --output-file eslint_report.json --format json '**/*.{js,tsx,jsx,ts}'",
    "local": "nx run-many --target=local --verbose --parallel=100 --output-style=stream",
    "reset:codebase": "yarn clear && yarn && yarn build",
    "kill": "yarn kill:backend",
    "kill:backend": "fkill --force --silent :3000 :3001 :3002 :3003",
    "seed:books": "nx run @book-library-tool/books:seed-books",
    "db:reset": "yarn docker:local:down && rm -rf mongodata && yarn docker:local -d",
    "db:migrate:create": "nx run @book-library-tool/database:migrate:create",
    "db:migrate:up": "nx run @book-library-tool/database:migrate:up",
    "db:migrate:down": "nx run @book-library-tool/database:migrate:down",
    "clear": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' + && find . -name \"dist\" -type d -prune -exec rm -rf '{}' +",
    "user:create": "nx run @book-library-tool/auth:generate-user",
    "generate:api": "nx run @book-library-tool/api:build",
    "generate:sdk": "nx run @book-library-tool/sdk:sdk-gen",
    "generate:graphql": "nx run @book-library-tool/graphql:graphql-gen",
    "git-hooks-prepare": "husky install",
    "open:docs": "nx run @book-library-tool/api:open-docs",
    "rabbit:ui": "open http://localhost:15672",
    "rabbit:reset": "docker exec -it rabbitmq rabbitmqctl stop_app && docker exec -it rabbitmq rabbitmqctl reset && docker exec -it rabbitmq rabbitmqctl start_app",
    "rabbit:purge": "docker exec rabbitmq rabbitmqadmin purge queue name=reservation_service.development.queue && docker exec rabbitmq rabbitmqadmin purge queue name=wallet_service.development.queue && docker exec rabbitmq rabbitmqadmin purge queue name=book_service.development.queue",
    "rabbit:delete": "docker exec rabbitmq rabbitmqadmin delete queue name=reservation_service.development.queue && docker exec rabbitmq rabbitmqadmin delete queue name=wallet_service.development.queue && docker exec rabbitmq rabbitmqadmin delete queue name=book_service.development.queue",
    "rabbit:list": "docker exec rabbitmq rabbitmqadmin list queues name messages_ready messages_unacknowledged"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vitest": "^0.5.4",
    "fix-esm-import-path": "^1.10.1",
    "fkill-cli": "^8.0.0",
    "husky": "^9.1.7",
    "knip": "^5.50.5",
    "lint-staged": "^15.5.1",
    "nx": "^20.8.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "testcontainers": "^10.24.2",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.7.0",
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  }
}
