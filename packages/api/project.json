{
  "name": "@book-library-tool/api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": [
    "@book-library-tool/types",
    "@book-library-tool/shared"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && tsc -p tsconfig.json && node --import tsx ./src/scripts/compile.ts",
        "outputs": ["{projectRoot}/dist"],
        "cwd": "{projectRoot}"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && tsc -p tsconfig.json",
        "cwd": "{projectRoot}"
      }
    },
    "local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --watch --preserveWatchOutput",
        "cwd": "{projectRoot}"
      }
    },
    "open-docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "open dist/openapi.html",
        "cwd": "{projectRoot}"
      }
    }
  }
}
