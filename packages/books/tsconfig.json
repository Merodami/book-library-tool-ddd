{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      // API
      "@books/api/*": ["src/api/*"],

      // Application
      "@books/application/*": ["src/application/*"],

      // Domain
      "@books/domain/*": ["src/domain/*"],

      // Infrastructure
      "@books/infrastructure/*": ["src/infrastructure/*"]
    }
  },
  "include": ["src", "scripts"],
  "exclude": [
    "dist",
    "../../node_modules",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**"
  ],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../shared"
    },
    {
      "path": "../sdk"
    },
    {
      "path": "../api"
    },
    {
      "path": "../event-store"
    },
    {
      "path": "../database"
    },
    {
      "path": "../auth"
    },
    {
      "path": "../http"
    },
    {
      "path": "../tests"
    }
  ]
}
