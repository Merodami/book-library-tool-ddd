{
  "name": "@book-library-tool/database",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["@book-library-tool/sdk"],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "depcheck",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && tsc -p tsconfig.json",
        "outputs": ["{projectRoot}/dist"],
        "cwd": "{projectRoot}"
      }
    },
    "local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --watch --preserveWatchOutput",
        "cwd": "{projectRoot}"
      }
    },
    "seed-books": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --import tsx ./src/scripts/seedBooks.ts",
        "cwd": "{projectRoot}"
      }
    },
    "migrate:up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "migrate-mongo up",
        "cwd": "{projectRoot}"
      }
    },
    "migrate:down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "migrate-mongo down",
        "cwd": "{projectRoot}"
      }
    }
  }
}
