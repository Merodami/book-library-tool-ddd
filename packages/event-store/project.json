{
  "name": "@book-library-tool/event-store",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": [
    "@book-library-tool/shared",
    "@book-library-tool/database"
  ],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn knip --workspace={projectName}",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --watch --preserveWatchOutput",
        "cwd": "{projectRoot}"
      }
    }
  }
}
