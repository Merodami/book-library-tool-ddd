{
  "name": "@book-library-tool/graphql-gateway",
  "version": "0.0.0",
  "private": true,
  "description": "GraphQL Gateway for Book Library Tool",
  "author": "merodami",
  "type": "module",
  "main": "src/index.js",
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@book-library-tool/redis": "workspace:^",
    "@book-library-tool/sdk": "workspace:^",
    "cors": "^2.8.5",
    "express": "5.1.0",
    "express-rate-limit": "^7.5.0",
    "graphql": "^16.10.0",
    "graphql-query-complexity": "^1.1.0",
    "graphql-tag": "^2.12.6",
    "http-graceful-shutdown": "^3.1.14"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "depcheck": "^1.4.7",
    "typescript": "^5.8.3"
  },
  "depcheck": {
    "ignore": [
      "nx",
      "ts-node",
      "tsconfig-paths"
    ],
    "parsers": {
      "**/*.ts": "typescript"
    },
    "detectors": [
      "requireCallExpression",
      "importDeclaration",
      "typescriptImportEqualsDeclaration"
    ]
  }
}
