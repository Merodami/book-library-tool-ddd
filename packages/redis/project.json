{
  "name": "@book-library-tool/redis",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["@book-library-tool/shared"],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p tsconfig.json --noEmit",
        "cwd": "{projectRoot}"
      }
    },
    "depcheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn knip --workspace={projectName}",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "cwd": "{projectRoot}"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/redis/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/redis/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
